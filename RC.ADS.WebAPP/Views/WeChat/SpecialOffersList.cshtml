@model IEnumerable<RC.ADS.Data.Entity.AD_Article.Article>

@{
    ViewData["Title"] = "优惠列表";
    Layout = "~/Views/Shared/Wechat/_LayoutWechatComeBack.cshtml";
}

<div class="weui_cells_title"> @ViewData["Title"]</div>
<div class="weui_cells weui_cells_access">
    @foreach (var item in Model)
    {
        <a asp-controller="wechat" asp-action="ShowArticle" asp-route-id="@item.Id" class="weui_cell">
            <div class="weui_cell_bd weui_cell_primary">
                <p>@item.ArticleName</p>
            </div>
            <div class="weui_cell_ft"> </div>
        </a>

    }
</div>

