@model IEnumerable<RC.ADS.Data.Entity.AD_Order.Order>

@{
    ViewData["Title"] = @ViewBag.OwerName + "订单页";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" asp-route-owerId="@ViewBag.OwerId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle btn-sm"
                            data-toggle="dropdown">
                        操作 <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">

                        <li><a asp-action="Edit" asp-route-id="@item.Id">编辑</a> </li>
                        <li><a asp-action="Details" asp-route-id="@item.Id">查看</a> </li>
                        <li><a asp-action="Delete" asp-route-id="@item.Id">删除</a></li>
                        <li><a asp-action="ShowOrderStatus" asp-route-orderId="@item.Id">查看订单状态变更时间</a></li>

                    </ul>
                </div>
 
            </td>
        </tr>
}
    </tbody>
</table>
