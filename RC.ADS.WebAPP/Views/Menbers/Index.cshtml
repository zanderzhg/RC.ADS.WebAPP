@model IEnumerable<RC.ADS.Data.Entity.AD_Menber.Menber>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ManberName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountSum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntegralSum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ManberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountSum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntegralSum)
            </td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle btn-sm"
                            data-toggle="dropdown">
                        操作 <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">

                        <li><a asp-action="Edit" asp-route-id="@item.Id">编辑</a> </li>
                        <li><a asp-action="Details" asp-route-id="@item.Id">查看</a> </li>
                        <li><a asp-action="Delete" asp-route-id="@item.Id">删除</a></li>
                        <li><a asp-controller="Orders" asp-action="Create" asp-route-id="@item.Id">添加订单</a></li>
                        <li><a asp-controller="Orders" asp-action="index" asp-route-id="@item.Id">查看订单</a></li>
                        <li><a asp-action="Delete" asp-route-id="@item.Id">充值</a></li>
                        <li><a asp-action="Delete" asp-route-id="@item.Id">添加积分</a></li>
                    </ul>
                </div>
                
            </td>
        </tr>
}
    </tbody>
</table>
